//basic calculator
#include<iostream>
using namespace std;
int main(){
        int a,b;
        cout<<"Enter value of a:";
        cin>>a;        
        cout<<"Enter value of b:";
        cin>>b;
        char operation;
        cout<<"Enter operation to perform:";
        cin>>operation;
        switch(operation){
                case '+':cout<<"Output="<<a+b<<endl;
                        break;
                case '-':cout<<"Output="<<a-b<<endl;
                        break;
                case '*':cout<<"Output="<<a*b<<endl;
                        break;        
                case '/':cout<<"Output="<<a/b<<endl;
                        break;
        }
}
