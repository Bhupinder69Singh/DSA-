#include<iostream>
using namespace std;
int main(){
  int n;
  cin>>n;
  int i=1;

  while(i<=n){
    int col=1;
    int nums=n-i+1;
    while(col<=nums){
        cout<<col;
        col++;
    }
    int stars=i-1;
    while(stars){
        cout<<"*";
        stars=stars-1;
    }
    int star2 = i-1;
    while(star2) {
      cout<<"*";
      star2=star2-1;
    }
    int col2=nums;
    while(col2){
        cout<<col2;
        col2=col2-1;
    }
    cout<<endl;
    i=i+1;
    }

}
